public String formatName(String firstName, String lastName) {
    //code here
    if(firstName==''||firstName==null){
        return lastName;
    }else if(lastName==''||lastName==null){
        return firstName;
    }else if(firstName==''||firstName==null && lastName==''||lastName==null){
        return '';
    }else{
        return lastName +', '+ firstName;
    }
}